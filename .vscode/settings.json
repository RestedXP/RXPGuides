{
    "editor.wordWrapColumn": 120,
    "Lua.telemetry.enable": false,
    "Lua.runtime.version": "LuaJIT",
    "Lua.workspace.ignoreDir": [
        ".vscode",
        "libs",
        "Scripts"
    ],
    "[lua]": {
        "editor.defaultFormatter": "Koihik.vscode-lua-format"
    },
    "Lua.diagnostics.disable": [
        "undefined-field",
        "redundant-parameter",
        "missing-parameter",
        "param-type-mismatch"
    ],
}
